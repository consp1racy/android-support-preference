<resources>

    <style name="Preference.Material" parent="">
        <item name="android:layout">@layout/preference_material</item>
        <item name="asp_tint">?colorAccent</item>
    </style>

    <style name="Preference.Material.PreferenceScreen"/>

    <style name="Preference.Material.Information">
        <!--<item name="android:layout">@layout/preference_information_material</item>-->
        <item name="android:layout">@layout/preference_material</item>
        <item name="android:enabled">false</item>
        <item name="android:shouldDisableView">false</item>
    </style>

    <style name="Preference.Material.Category">
        <item name="android:layout">@layout/preference_category_material</item>
        <!-- The title should not dim if the category is disabled, instead only the preference children should dim. -->
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="Preference.Material.CheckBoxPreference">
        <item name="android:widgetLayout">@layout/preference_widget_checkbox</item>
    </style>

    <style name="Preference.Material.SwitchPreferenceCompat">
        <item name="android:widgetLayout">@layout/preference_widget_switch</item>
        <item name="android:textOn">@string/capital_on</item>
        <item name="android:textOff">@string/capital_off</item>
        <!--<item name="android:textOn">@null</item>-->
        <!--<item name="android:textOff">@null</item>-->
    </style>

    <!--<style name="Preference.Material.SeekBarPreference">-->
        <!--<item name="android:layout">@layout/preference_widget_seekbar_material</item>-->
    <!--</style>-->

    <style name="Preference.Material.DialogPreference">
        <item name="android:positiveButtonText">@android:string/ok</item>
        <item name="android:negativeButtonText">@android:string/cancel</item>
    </style>

    <style name="Preference.Material.DialogPreference.YesNoPreference">
        <item name="android:positiveButtonText">@android:string/yes</item>
        <item name="android:negativeButtonText">@android:string/no</item>
    </style>

    <style name="Preference.Material.DialogPreference.EditTextPreference">
        <item name="android:dialogLayout">@layout/preference_dialog_edittext_material</item>
    </style>

    <style name="Preference.Material.DialogPreference.SeekBarDialogPreference">
        <item name="android:dialogLayout">@layout/seekbar_dialog</item>
    </style>

    <style name="Preference.Material.SeekBarPreference">
        <item name="android:layout">@layout/preference_seekbar_material</item>
    </style>

    <style name="Preference.Material.DialogPreference.RingtonePreference">
        <item name="android:ringtoneType">ringtone</item>
        <item name="android:showSilent">true</item>
        <item name="android:showDefault">true</item>
    </style>

    <style name="PreferenceFragmentList.Material" parent="">
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
        <!--<item name="android:paddingTop">8dp</item>-->
        <!--<item name="android:paddingBottom">8dp</item>-->
    </style>

</resources>
